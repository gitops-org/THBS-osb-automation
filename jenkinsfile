pipeline {
    agent any
    tools {
        maven "Maven 3.3.9"
        jdk "jdk8"
    }
    stages {
        stage ("Initialize") {
            steps {
               
               withEnv(["JAVA_HOME=${ tool 'jdk8' }", "PATH+MAVEN=${tool 'Maven 3.3.9'}/bin:${env.JAVA_HOME}/bin"]) {
    cmd 'mvn -Dmaven.test.failure.ignore=true install'
}

            }
        }

        stage ("Build") {
            steps {
                cmd 'mvn -Dmaven.test.failure.ignore=true install' 
            }
           
        }
    }
}
