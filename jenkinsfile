pipeline {
    agent any
    tools {
        maven "Maven 3.3.9"
        jdk "jdk8"
    }
    stages {
        stage ("Initialize") {
            steps {
               
               withEnv(["JAVA_HOME=${ tool 'jdk8' }", "PATH+MAVEN=${tool 'Maven 3.3.9'}/bin:${env.JAVA_HOME}/bin"]) {
    sh "mvn --batch-mode -V -U -e clean install"
}

            }
        }

        stage ("Build") {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
    }
}
